<%= form_with(model: tool_call, class: "contents") do |form| %>
  <% if tool_call.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(tool_call.errors.count, "error") %> prohibited this tool_call from being saved:</h2>

      <ul class="list-disc ml-6">
        <% tool_call.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :message_id %>
    <%= form.text_field :message_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tool_call.errors[:message_id].none?, "border-red-400 focus:outline-red-600": tool_call.errors[:message_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tool_call_id %>
    <%= form.text_field :tool_call_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tool_call.errors[:tool_call_id].none?, "border-red-400 focus:outline-red-600": tool_call.errors[:tool_call_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tool_call.errors[:name].none?, "border-red-400 focus:outline-red-600": tool_call.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :arguments %>
    <%= form.text_field :arguments, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tool_call.errors[:arguments].none?, "border-red-400 focus:outline-red-600": tool_call.errors[:arguments].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
